---
interface Props {
  name: string;
  title: string;
  description: string;
}

const { name, title, description } = Astro.props;
import { Image } from "astro:assets";
import backgroundSvg from "../assets/background.svg";
---

<section id="home" class="relative min-h-screen flex items-center pt-16">
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <Image
      src={backgroundSvg}
      alt="Background Pattern"
      class="w-full h-full object-cover opacity-20"
    />
  </div>

  <div class="container">
    <div class="max-w-3xl">
      <span
        class="inline-block py-1 px-3 rounded-full bg-purple-100 text-purple-800 text-sm font-medium mb-4 dark:bg-purple-900 dark:text-purple-200"
      >
        Frontend Developer
      </span>
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        Hi, I'm <span class="gradient-text">{name}</span>
      </h1>
      <h2
        class="text-2xl md:text-3xl font-medium text-slate-700 dark:text-slate-300 mb-6"
      >
        {title}
      </h2>
      <p
        class="text-lg text-slate-600 dark:text-slate-400 mb-8 leading-relaxed"
      >
        {description}
      </p>
      <div class="flex flex-wrap gap-4">
        <a
          href="#projects"
          class="px-6 py-3 bg-purple-600 text-white rounded-lg font-medium transition-all hover:bg-purple-700 focus:ring-4 focus:ring-purple-300"
          >View My Work</a
        >
        <a
          href="#contact"
          class="px-6 py-3 bg-white text-slate-800 dark:bg-slate-800 dark:text-white border border-slate-300 dark:border-slate-600 rounded-lg font-medium transition-all hover:bg-slate-100 dark:hover:bg-slate-700"
          >Contact Me</a
        >
      </div>
    </div>
  </div>
</section>
