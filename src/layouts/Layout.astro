---
interface Props {
  title?: string;
}

const { title = "Portafolio del Desarrollador" } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-sm py-4 shadow-sm">
      <div class="container flex justify-between items-center">
        <a href="#" class="text-xl font-bold gradient-text">Dev<span class="text-slate-800 dark:text-white">Portafolio</span></a>
        
        <!-- Menú móvil -->
        <button id="mobile-menu-button" class="md:hidden p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16"></path>
          </svg>
        </button>

        <nav id="main-nav" class="hidden md:block">
          <ul class="flex flex-col md:flex-row absolute md:relative left-0 right-0 top-full md:top-auto bg-white/90 dark:bg-slate-900/90 md:bg-transparent p-4 md:p-0 space-y-4 md:space-y-0 md:space-x-6">
            <li>
              <a href="#home" class="hover:text-purple-600 transition-colors"
                >Inicio</a>
            </li>
            <li>
              <a
                href="#projects"
                class="hover:text-purple-600 transition-colors">Proyectos</a>
            </li>
            <li>
              <a
                href="#testimonials"
                class="hover:text-purple-600 transition-colors">Testimonios</a>
            </li>
            <li>
              <a href="#contact" class="hover:text-purple-600 transition-colors"
                >Contacto</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-slate-100 dark:bg-slate-800 py-8">
      <div class="container">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <p class="text-slate-600 dark:text-slate-400">
            &copy; {new Date().getFullYear()} Portafolio del Desarrollador. Todos los derechos reservados.
          </p>
          <div class="flex space-x-4 mt-4 md:mt-0">
            <a
              href="#"
              class="text-slate-600 dark:text-slate-400 hover:text-purple-600 transition-colors"
            >
              <span class="sr-only">GitHub</span>
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
            <a
              href="#"
              class="text-slate-600 dark:text-slate-400 hover:text-purple-600 transition-colors"
            >
              <span class="sr-only">LinkedIn</span>
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
            </a>
            <a
              href="#"
              class="text-slate-600 dark:text-slate-400 hover:text-purple-600 transition-colors"
            >
              <span class="sr-only">Twitter</span>
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.028 10.028 0 01-3.127 1.195 4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mainNav = document.getElementById('main-nav');

      mobileMenuButton?.addEventListener('click', () => {
        mainNav?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
